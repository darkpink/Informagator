<Window x:Class="Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Informagator Manager" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.Resources>
                <Style TargetType="Grid">
                    <Setter Property="Background" Value="#FFBBBBBB"/>
                </Style>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="8"/>
                    <Setter Property="Height" Value="30" />
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Margin="8" BorderThickness="1" CornerRadius="2" BorderBrush="Black" Padding="5" >
                <TextBlock Grid.Row="0" Text="Version:" HorizontalAlignment="Center" />
            </Border>
            <Button Grid.Row="1">Versions</Button>
            <Button Grid.Row="2">Configure Machines</Button>
            <Button Grid.Row="3">Configure Processes</Button>
            <Button Grid.Row="4">Assemblies</Button>
            <Button Grid.Row="5">Start/Stop Processes</Button>
            <Button Grid.Row="6">Global Settings</Button>
        </Grid>
    </Grid>
</Window>
