<Window x:Class="Acadian.Informagator.Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Acadian.Informagator.Manager.Vms"
        xmlns:cmd="clr-namespace:Acadian.Informagator.Manager.Commands"
        xmlns:panel="clr-namespace:Acadian.Informagator.Manager.Panels"
        Title="Informagator Manager" Height="600" Width="800">
    <Window.DataContext>
        <vm:MainWindowVm />
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:AssemblyListVm}">
            <panel:AssemblyList />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:WorkerListVm}">
            <panel:WorkerList />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MachineListVm}">
            <panel:MachineList />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:GlobalSettingsVm}">
            <panel:GlobalSettings />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:StartStopVm}">
            <panel:StartStop />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ConfigurationListVm}">
            <panel:ConfigurationList />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ConfigurationEditVm}">
            <panel:ConfigurationEdit />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AssemblyEditVm}">
            <panel:AssemblyEdit />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:WorkerEditVm}">
            <panel:WorkerEdit />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MachineEditVm}">
            <panel:MachineEdit />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.Resources>
                <Style TargetType="Grid">
                    <Setter Property="Background" Value="#FFBBBBBB"/>
                </Style>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="8"/>
                    <Setter Property="Height" Value="30" />
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Margin="8" BorderThickness="1" CornerRadius="2" BorderBrush="Black" Padding="5" >
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="Active Configuration:" HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding ActiveConfiguration}" HorizontalAlignment="Center" />
                </StackPanel>
            </Border>
            <Button Grid.Row="1" Command="{x:Static cmd:PanelChangeCommandManager.GoToConfigurationList}" >Configurations</Button>
            <Button Grid.Row="2" Command="{x:Static cmd:PanelChangeCommandManager.GoToMachineList}" >Machines</Button>
            <Button Grid.Row="3" Command="{x:Static cmd:PanelChangeCommandManager.GoToWorkerList}" >Workers</Button>
            <Button Grid.Row="4" Command="{x:Static cmd:PanelChangeCommandManager.GoToAssemblyList}" >Assemblies</Button>
            <Button Grid.Row="5" Command="{x:Static cmd:PanelChangeCommandManager.GoToStartStop}">Start/Stop</Button>
            <Button Grid.Row="6" Command="{x:Static cmd:PanelChangeCommandManager.GoToGlobalSettings}">Global Settings</Button>
        </Grid>
        <ContentControl Grid.Column="1" Content="{Binding PanelVm}" />
    </Grid>
</Window>
